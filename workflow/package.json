{
  "name": "user-onboarding-workflow",
  "version": "1.0.0",
  "description": "Automated user onboarding workflow from Google Forms to Fusio",
  "main": "services/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:verbose": "jest --verbose",
    "lint": "eslint services/*.js tests/**/*.js",
    "lint:fix": "eslint services/*.js tests/**/*.js --fix",
    "format": "prettier --write \"services/*.js\" \"tests/**/*.js\""
  },
  "keywords": [
    "n8n",
    "workflow",
    "automation",
    "fusio",
    "registration"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.2",
    "nodemailer": "^7.0.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "services/**/*.js",
      "!services/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "verbose": true
  }
}
